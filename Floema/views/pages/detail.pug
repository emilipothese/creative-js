extends ../_includes/layout

block variables
  - var template = 'detail'

block content
  .detail
    .detail__wrapper
      figure.detail__media
        img.detail__media__image(alt=product.media.image.alt src=product.media.image.url)

    .detail__information
      p.detail__information__collection=product.data.collection.data.title

      h1.detail__information__title=product.data.title

      .detail__imformation__content
        .detail__information__highlights
          each highlight in product.data.highlights
            p.detail__information__highlight
              svg.detail__information__highlight__icon

        .detail__information__list
          each item in product.data.informations
            p.detail__information__item__title=item.informations_label

        a.detail__information__link(href=product.data.link_url.url)=product.data.link_text
